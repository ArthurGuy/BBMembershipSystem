{
	"name": "ArthurGuy/BBMS",
	"description": "Build Brighton Member System",
	"keywords": ["laravel"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
        "gocardless/gocardless": "0.4.2",
        "nesbot/Carbon": "*",
        "kmd/logviewer": "dev-master",
        "aws/aws-sdk-php": "2.4.*",
        "aws/aws-sdk-php-laravel": "1.*",
        "nuovo/spreadsheet-reader": "dev-master",
        "intervention/image": "2.*",
        "paypal/merchant-sdk-php":"3.8.*",
        "laracasts/presenter": "0.1.*",
        "artdarek/pusherer": "1.0.*",
        "laracasts/utilities": "~1.0",
        "stripe/stripe-php": "1.*",
        "michelf/php-markdown": "1.4.*",
		"guzzlehttp/guzzle": "~5.0",
		"jenssegers/rollbar": "~1.4"
	},
    "require-dev": {
        "mockery/mockery": "dev-master@dev",
        "codeception/codeception": "~2.0",
        "codeception/mockery-module": "*"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-4": {
            "BB\\": "app/BB/"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
