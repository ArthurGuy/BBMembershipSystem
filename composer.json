{
	"name": "ArthurGuy/BBMS",
	"description": "Build Brighton Member System",
    "authors": [
        {
            "name": "Arthur Guy",
            "email": "arthur@arthurguy.co.uk"
        }
    ],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "dev-master",
        "symfony/console": "@dev",
        "symfony/debug": "@dev",
        "symfony/finder": "@dev",
        "symfony/http-foundation": "@dev",
        "symfony/http-kernel": "@dev",
        "symfony/process": "@dev",
        "symfony/routing": "@dev",
        "symfony/security-core": "@dev",
        "symfony/translation": "@dev",
        "symfony/var-dumper": "@dev",
        "symfony/css-selector": "@dev",
        "symfony/dom-crawler": "@dev",
        "illuminate/html": "~5.0",
		"gocardless/gocardless": "0.4.2",
        "nesbot/Carbon": "*",
        "rap2hpoutre/laravel-log-viewer": "~0.2.8",
        "aws/aws-sdk-php-laravel": "~2.0",
        "nuovo/spreadsheet-reader": "dev-master",
        "intervention/image": "2.*",
        "paypal/merchant-sdk-php":"3.8.*",
        "laracasts/presenter": "~0.2.1",
        "artdarek/pusherer": "1.0.*",
        "laracasts/utilities": "~2.0",
        "stripe/stripe-php": "1.*",
        "michelf/php-markdown": "1.4.*",
		"guzzlehttp/guzzle": "~5.0",
		"jenssegers/rollbar": "~1.4",
		"maknz/slack": "~1.5",
		"sybio/gif-creator": "~1.0",
		"filp/whoops": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"mockery/mockery": "dev-master@dev",
        "codeception/codeception": "~2.0.14",
        "codeception/mockery-module": "*",
        "fzaninotto/faker": "~1.4"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"BB\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"pre-update-cmd": [
        		"php artisan clear-compiled"
        	],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
